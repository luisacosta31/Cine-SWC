@model IEnumerable<SWC.Models.tb_empleado>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <!-- end col-2 -->
    <!-- begin col-10 -->
    <div class="col-md-12">
        <!-- begin panel -->
        <div class="panel panel-inverse">
            <div class="panel-heading">
                <div class="panel-heading-btn">
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
                </div>
                <h4 class="panel-title">LISTADO DE EMPLEADOS</h4>
            </div>
            <div class="panel-body">
                <span class="label label-primary pull-left m-r-10" style="font-size:120%; background: white">
                    <strong style="color:white">
                        @Html.ActionLink("Registrar Nuevo Empleado", "Create")
                    </strong>
                </span>
                <table id="data-table" class="table table-striped table-bordered">
                    <tr>
                        <th>
                            <label>Nombre</label>
                        </th>
                        <th>
                            <label>Apellidos</label>
                        </th>
                        <th>
                            <label>DNI</label>
                        </th>
                        <th>
                            <label>Sueldo</label>
                        </th>
                        <th>
                            <label>Fecha de Nacimiento</label>
                        </th>
                        <th>
                            <label>Usuario</label>
                        </th>
                        <th>
                            <label>Contraseña</label>
                        </th>
                        <th>
                            <label>Sexo</label>
                        </th>
                        <th>
                            <label>Tipo de trabajador</label>
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.apellidos)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.dni)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.sueldo)
                            </td>
                            <td>
                                @String.Format("{0:dd/MM/yyyy}", item.fecNac)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.usuario)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.contra)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tb_Sexo.desSexo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tb_tipotrabajador.desTipotrab)
                            </td>
                            <td>
                                @Html.ActionLink("Editar", "Edit", new { id = item.idEmpleado }) |
                                @Html.ActionLink("Detalles", "Details", new { id = item.idEmpleado }) 
                                @Html.ActionLink("Eliminar", "Delete", new { id = item.idEmpleado })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
        <!-- end panel -->
    </div>
    <!-- end col-10 -->
</div>