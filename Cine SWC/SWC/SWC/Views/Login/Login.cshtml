@model SWC.Models.tb_empleado

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@using (Html.BeginForm("","",FormMethod.Post))
{
    @Html.AntiForgeryToken()
     @Html.ValidationSummary(true)
    <div class="login-content">
        <div class="form-group m-b-15">
            <input id="user" type="text" class="form-control" name="usuario" required placeholder="Usuario"/>
        </div>
        <div class="form-group m-b-15">
            <input id="pass" type="password" class="form-control" name="contraseña" required placeholder="Contraseña"/>
        </div>
        <div class="login-buttons">
            <button type="submit" class="btn btn-info btn-block btn-lg">Iniciar Sesion</button>
        </div>
        @if (@ViewBag.Message != null)
        {
            <div style="color:red;text-align:center"><strong>@ViewBag.Message</strong></div>
        }
        <hr>
        <p class="text-center">
            © SCW All Right Reserved 2015
        </p>
    </div>
}
